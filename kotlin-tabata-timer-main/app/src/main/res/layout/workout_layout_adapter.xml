<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvWorkout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWorkoutTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="200"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Workout Title"
                android:textColor="@color/black"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivStartWorkout"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_play"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/ivUpdateWorkout"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_edit"
                app:tint="@color/black" />



        </LinearLayout>

        <TextView
            android:id="@+id/tvWorkoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxHeight="@dimen/_170sdp"
            tools:text="xx intervals | 99:99"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tvWorkoutInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxHeight="@dimen/_170sdp"
            tools:text="xx intervals | 99:99"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>