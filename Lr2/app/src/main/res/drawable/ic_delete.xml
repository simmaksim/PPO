<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/enterAnimTime"
    android:exitFadeDuration="@integer/exitAnimTime">

    <item android:state_pressed="true" >
        <layer-list>
            <item android:drawable="@drawable/ic_delete_dark"
                android:width="36dp" android:height="36dp"
                android:gravity="end|bottom"/>
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/ic_delete_light"
                android:width="40dp" android:height="40dp"
                android:gravity="end|bottom"/>
        </layer-list>
    </item>
</animated-selector>