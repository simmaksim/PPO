<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tabata" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondaryLight</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/Background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:editTextColor">@color/textColor</item>
        <item name="actionOverflowButtonStyle">@style/Menu</item>
        <item name="android:textSize">20sp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimarySurface">@color/Surface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Tabata.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="Menu" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorToolbar</item>
    </style>

    <style name="Theme.Tabata.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tabata.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Tabata.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>